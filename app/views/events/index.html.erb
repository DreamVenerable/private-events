<h1>Events</h1>

<ul>
  <h2>Upcoming:</h2>
  <% @events.upcoming.each do |event| %>
      <li>
        <%= link_to "#{event.name}", event_path(event.id) %>
      </li>
  <% end %>
  <h2>Past:</h2>
  <% @events.past.each do |event| %>
      <li>
        <%= link_to "#{event.name}", event_path(event.id) %>
      </li>
  <% end %>
</ul>

<%= link_to "New Event", new_event_path %>